<form class="login" method="Post" action="signup">
    <h5 class="login-title">Sign Up</h5>
    <div class="form-group">
        <input type="text" class="form-input" placeholder="Your name" name="name">
    </div>
    <div class="form-group">
        <input type="text" class="form-input" placeholder="Username">
    </div>
    <div class="form-group">
        <input type="password" class="form-input" placeholder="Password">
    </div>
    <div class="form-group">
        <input type="password" class="form-input" placeholder="Repeat Password">
    </div> 
    <div class="login-options">
        <div class="form-check">
            <input class="form-check-input mt-0" type="checkbox" value="remember" id="remember">
            <label class="form-check-label" for="remember">
                Remember me
            </label>
        </div>
        <a href="/forgot-password">Forgot Password?</a>
    </div>
    <button type="submit" class="btn login-button-submit">Sign Up</button>
    <div class="login-register">
        <span>Already have an account?</span>
        <a href="/login">Login</a>
    </div>
</form>